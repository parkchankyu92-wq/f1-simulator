    <script>
        // JavaScript: ê²Œì„ ë¡œì§
        const vehicles = [
            { id: 'car1', position: 0 },
            { id: 'car2', position: 0 },
            { id: 'car3', position: 0 }
        ];
        // ê²½ì£¼ ì™„ë£Œ ê±°ë¦¬ (íŠ¸ë™ ë„ˆë¹„ - ì°¨ëŸ‰ ë„ˆë¹„ 60px - ê²°ìŠ¹ì„  ë„ˆë¹„ 20px)
        const RACE_DISTANCE_ADJUSTMENT = 60 + 20; 
        const RACE_DISTANCE = document.getElementById('raceTrack').offsetWidth - RACE_DISTANCE_ADJUSTMENT; 
        const startButton = document.getElementById('startButton');
        const resultDisplay = document.getElementById('result');
        let isRacing = false;
        let raceInterval;

        // ì°¨ëŸ‰ì„ ë¬´ì‘ìœ„ë¡œ ì´ë™ì‹œí‚¤ëŠ” í•¨ìˆ˜
        function moveCar(car) {
            // 1~10 í”½ì…€ ì‚¬ì´ì˜ ë¬´ì‘ìœ„ ê±°ë¦¬ë¥¼ ìƒì„±
            const randomMove = Math.floor(Math.random() * 10) + 1;
            car.position += randomMove;

            // ìœ„ì¹˜ê°€ ê²½ì£¼ ê±°ë¦¬ë¥¼ ì´ˆê³¼í•˜ì§€ ì•Šë„ë¡ ì¡°ì •
            if (car.position >= RACE_DISTANCE) {
                car.position = RACE_DISTANCE;
            }
            
            // DOM ìš”ì†Œì— ìƒˆ ìœ„ì¹˜ ì ìš©
            document.getElementById(car.id).style.left = car.position + 'px';

            // ìš°ìŠ¹ì ì²´í¬
            if (car.position >= RACE_DISTANCE) {
                return car; // ìš°ìŠ¹ ì°¨ëŸ‰ ë°˜í™˜
            }
            return null;
        }

        // ê²½ì£¼ë¥¼ ì§„í–‰í•˜ëŠ” ë©”ì¸ í•¨ìˆ˜
        function startRace() {
            if (isRacing) return;
            isRacing = true;
            startButton.disabled = true;
            resultDisplay.textContent = "ê²½ì£¼ ì§„í–‰ ì¤‘...";

            // ì°¨ëŸ‰ ìœ„ì¹˜ ì´ˆê¸°í™” ë° í´ë˜ìŠ¤ ì œê±°
            vehicles.forEach(car => {
                car.position = 0;
                document.getElementById(car.id).style.left = '0px';
                document.getElementById(car.id).classList.remove('winner');
            });
            
            // 50msë§ˆë‹¤ ì°¨ëŸ‰ì„ ì´ë™ì‹œí‚¤ëŠ” ì¸í„°ë²Œ ì„¤ì • (ê²Œì„ ë£¨í”„)
            raceInterval = setInterval(() => {
                let winner = null;
                
                // ëª¨ë“  ì°¨ëŸ‰ ì´ë™
                // **ì£¼ì˜:** ìš°ìŠ¹ìê°€ ë™ì‹œì— ë‚˜ì˜¬ ìˆ˜ ìˆìœ¼ë¯€ë¡œ, ë£¨í”„ë¥¼ í•œ ë²ˆë§Œ ëŒë¦¬ê³  ì²˜ìŒ ë°œê²¬ëœ ìš°ìŠ¹ìë¥¼ ìµœì¢… ìš°ìŠ¹ìë¡œ ì²˜ë¦¬í•©ë‹ˆë‹¤.
                for (let i = 0; i < vehicles.length; i++) {
                    const finishedCar = moveCar(vehicles[i]);
                    if (finishedCar) {
                        // ê²½ì£¼ ê±°ë¦¬ ì´ˆê³¼ í›„ ìµœì¢… ìœ„ì¹˜ ë³´ì • (ê²°ìŠ¹ì„ ì— ì •í™•íˆ ë©ˆì¶”ë„ë¡)
                        document.getElementById(finishedCar.id).style.left = RACE_DISTANCE + 'px';
                        winner = finishedCar;
                        break; 
                    }
                }

                // ìš°ìŠ¹ìê°€ ìˆìœ¼ë©´ ê²½ì£¼ ì¢…ë£Œ
                if (winner) {
                    clearInterval(raceInterval);
                    isRacing = false;
                    startButton.disabled = false;
                    
                    document.getElementById(winner.id).classList.add('winner');
                    resultDisplay.textContent = `ğŸ† ${winner.id}ê°€(ì´) ìš°ìŠ¹í–ˆìŠµë‹ˆë‹¤!`;
                }

            }, 50); // 0.05ì´ˆë§ˆë‹¤ ì—…ë°ì´íŠ¸

        }

        // ì‹œì‘ ë²„íŠ¼ ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ
        startButton.addEventListener('click', startRace);
        
        // ì°½ í¬ê¸° ì¡°ì • ì‹œ RACE_DISTANCEë¥¼ ë‹¤ì‹œ ê³„ì‚°
        window.addEventListener('resize', () => {
            if (!isRacing) {
                const newRaceDistance = document.getElementById('raceTrack').offsetWidth - RACE_DISTANCE_ADJUSTMENT;
                // RACE_DISTANCE = newRaceDistance; // ì „ì—­ ë³€ìˆ˜ ì—…ë°ì´íŠ¸ê°€ í•„ìš”í•  ê²½ìš° ì‚¬ìš©
            }
        });
        
